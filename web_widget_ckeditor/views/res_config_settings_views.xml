<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="res_config_settings_view_form" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.inherit.base.setup</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="0"/>
            <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@id='company_details_settings']" position="inside">
                    <div class="o_setting_left_pane">
                        <field name="deactivate_report_font"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <span class="o_form_label">Deactivate Configured Fonts</span>
                        <span class="fa fa-lg fa-building-o" title="Values set here are company-specific." aria-label="Values set here are company-specific." groups="base.group_multi_company" role="img"/>
                        <div class="text-muted">
                            On enabling it will deactivate the default fonts set in the document layout configuration.
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
</odoo>